// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "sqlite" // Cambia esto al proveedor de tu base de datos (mysql, sqlite, sqlserver, etc.)
  url      = env("DATABASE_URL") // Asegúrate de que DATABASE_URL esté definido en tu archivo .env
}

model Product {
    id Int @id @default(autoincrement())
    type Type @relation(fields: [type_id], references: [id])
    type_id Int
    price Int
    productDate Product_date @relation( fields: [product_date_id], references: [id])
    product_date_id Int @unique
    location String
    avible Boolean
}

model Product_date {
        id Int @id @default(autoincrement())
        product Product?
        slots Int
        // borre el time y dejé todo dentro de date..
        date DateTime
    }

model Type {
        id Int @id @default(autoincrement())
        name String @unique
        description String
        products Product[]
    }

